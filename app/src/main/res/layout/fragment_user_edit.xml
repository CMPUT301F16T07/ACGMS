<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp">

        <TextView
            android:text="@string/user_username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_image2"
            android:layout_alignParentStart="true"
            android:id="@+id/textview1"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/main_text" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/user_username"
            android:ems="10"
            android:id="@+id/edit_username_input"
            android:layout_below="@+id/textview1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorHighlight"
            android:padding="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:text="@string/user_firstname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview3"
            android:layout_below="@+id/edit_username_input"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/main_text" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/user_firstname"
            android:ems="10"
            android:layout_below="@+id/textview3"
            android:layout_alignParentStart="true"
            android:id="@+id/edit_firstname_input"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:background="@color/colorHighlight"
            android:padding="5dp"/>

        <TextView
            android:text="@string/user_lastname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview4"
            android:layout_below="@+id/edit_firstname_input"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/main_text" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/user_lastname"
            android:ems="10"
            android:layout_below="@+id/textview4"
            android:layout_alignParentStart="true"
            android:id="@+id/edit_lastname_input"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:background="@color/colorHighlight"
            android:padding="5dp"/>

        <TextView
            android:text="@string/user_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_lastname_input"
            android:layout_alignParentStart="true"
            android:id="@+id/textview5"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/main_text" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/user_email"
            android:ems="10"
            android:layout_below="@+id/textview5"
            android:layout_alignParentStart="true"
            android:id="@+id/edit_email_input"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:background="@color/colorHighlight"
            android:padding="5dp"/>

        <TextView
            android:text="@string/user_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_email_input"
            android:layout_alignParentStart="true"
            android:id="@+id/textview7"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/main_text" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/user_phone"
            android:ems="10"
            android:layout_below="@+id/textview7"
            android:layout_alignParentStart="true"
            android:id="@+id/edit_phone_input"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:background="@color/colorHighlight"
            android:padding="5dp"/>
    </RelativeLayout>

    <Button
        android:text="Done"
        android:layout_width="374dp"
        android:id="@+id/done_editUser_button"
        android:textSize="@dimen/button_text"
        android:layout_height="@dimen/large_button_box"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:layout_margin="5dp" />

</RelativeLayout>
