<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:text="@string/confirm_text"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:id="@+id/request_done_button"
        android:textSize="@dimen/button_text"
        style="@style/Widget.AppCompat.Button"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:stretchColumns="0,1"
        android:layout_gravity="center"
        android:layout_above="@+id/request_done_button">


        <TextView
            android:text="@string/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_text"
            android:textColor="#000000"
            android:textSize="20dp"
            android:padding="5dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:text="@string/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_input1_text"
                android:textColor="#000000"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="1dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:hint="1 Sir Winston Churchill SQ"
                android:ems="10"
                android:id="@+id/start_input_1"
                android:layout_height="35dp"
                android:background="@color/colorHighlight"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <TextView
                android:text="@string/city_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_input2_text"
                android:textColor="#000000"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="1dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:hint="Edmonton"
                android:ems="10"
                android:id="@+id/start_input_2"
                android:layout_height="35dp"
                android:background="@color/colorHighlight"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </TableRow>

        <TextView
            android:text="@string/end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_text"
            android:textColor="#000000"
            android:textSize="20dp"
            android:padding="5dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <TextView
                android:text="@string/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/end_input1_text"
                android:textColor="#000000"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="1dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:hint="1 Sir Winston Churchill SQ"
                android:ems="10"
                android:id="@+id/end_input_1"
                android:layout_height="35dp"
                android:background="@color/colorHighlight"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <TextView
                android:text="@string/city_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/end_input2_text"
                android:textColor="#000000"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="1dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:hint="Edmonton"
                android:ems="10"
                android:id="@+id/end_input_2"
                android:layout_height="35dp"
                android:background="@color/colorHighlight"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <RadioGroup android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup"
                android:layout_column="1">
                <RadioButton
                    android:text="@string/add_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonAddress"
                    android:checked="true"/>
                <RadioButton
                    android:text="@string/add_coordinate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonCoordinates" />
            </RadioGroup>

        </TableRow>
    </TableLayout>

</RelativeLayout>