<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map_view"
        android:layout_marginBottom="220dp"
        />


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button">


        <TextView
            android:text="@string/home_start_text"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/home_text"
            android:layout_marginRight="10dp"

            android:textColor="#000000"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/start_text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="30dp"
            android:background="@color/colorHighlight"
            android:inputType="textPersonName"
            android:hint="@string/home_address_text"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="@dimen/home_text"
            android:id="@+id/start_input"
            android:layout_toEndOf="@+id/start_text" />

        <TextView
            android:text="@string/home_end_text"
            android:textSize="@dimen/home_text"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/end_text"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/start_input" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorHighlight"
            android:inputType="textPersonName"
            android:hint="@string/home_address_text"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="@dimen/home_text"
            android:id="@+id/end_input"
            android:layout_below="@+id/start_input"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/end_text" />

        <TextView
            android:text="@string/home_option_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/textView15"
            android:layout_alignStart="@+id/end_input"
            android:layout_below="@+id/end_input"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>
    <Button
        android:text="@string/home_confirm_text"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:id="@+id/button"
        android:textSize="@dimen/button_text"
        style="@style/Widget.AppCompat.Button"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>