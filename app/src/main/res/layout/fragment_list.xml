<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <Button
            android:text="@string/list_requested"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="@dimen/list_type_button"
            android:id="@+id/button_requested" />

        <Button
            android:text="@string/list_pending"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="@dimen/list_type_button"
            android:id="@+id/button_pending" />

        <Button
            android:text="@string/list_accepted"
            android:layout_width="0dp"
            android:layout_weight=".33"
            android:layout_height="@dimen/list_type_button"
            android:id="@+id/button_accepted" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.33"
        android:id="@+id/list_container"
        android:layout_below="@+id/linearLayout">

    </FrameLayout>

</RelativeLayout>
